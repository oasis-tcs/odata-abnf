{
  "name": "railroad-js",
  "version": "1.0.0",
  "description": "A TypeScript tool for generating railroad diagrams from grammar definitions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "railroad-js": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "generate": "npm run build && node dist/index.js",
    "run": "node dist/index.js",
    "run:debug": "node dist/index.js --debug",
    "run:no-debug": "node dist/index.js --no-debug",
    "build:fast": "tsc --incremental",
    "diagram": "node ./dist/index.js"
  },
  "keywords": [
    "railroad",
    "diagram",
    "typescript",
    "tool"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/node": "24.3.1",
    "@typescript-eslint/eslint-plugin": "8.42.0",
    "@typescript-eslint/parser": "8.42.0",
    "eslint": "9.34.0",
    "jest": "30.1.3",
    "prettier": "^3.0.0",
    "rimraf": "6.0.1",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "minimist": "^1.2.8"
  }
}
